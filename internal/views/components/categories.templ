package components

templ Categories(categories []string) {
	<div id="categories">
		for _, category := range categories {
			<label for={ category }>
				<input
					hx-get="/views/offers-and-search"
                    hx-target="#offers-and-search"
                    hx-indicator="#loading-categories"
					type="radio"
					name="category"
					id={ category }
					value={ category }
				/>
				{ category }
			</label>
		}
	</div>
}

script setActive(category string) {
	const buttons = document.querySelectorAll('#categories button');
    buttons.forEach((button) => {
        button.dataset.active = 'false';
    });
    const activeButton = document.getElementById(category);
    activeButton.dataset.active = 'true';
}
